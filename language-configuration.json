{
  "comments": {
    "lineComment": "#",
    "blockComment": ["#[[", "]]"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "#[[", "close": "]]", "notIn": ["string"] },
    { "open": "#|[[", "close": "]]", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*\\b(fn|proc|if|else|while|for|match|struct|kind|impl)\\b.*$",
    "decreaseIndentPattern": "^\\s*(end|else)\\b.*$"
  }
}
